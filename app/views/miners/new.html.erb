<h1>New Miner Form</h1>

<% if flash[:errors]%>
<% flash[:errors].each do |error| %>
    <p style="color: red"> <%= error %></p>

  <%end%>
<%end%>

<%= form_for @miner do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :fave_color %>
  <%= f.text_field :fave_color %>
  <%=f.submit %>
<% end %>
